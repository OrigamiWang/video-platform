<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="szu.dao.LoginDao">


    <resultMap id="UserMap" type="szu.model.User">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="level" jdbcType="INTEGER" property="level"/>
        <result column="status" jdbcType="BIT" property="status"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
    </resultMap>


    <!--    void registerByPhone(@Param("name")String, @Param("phone") String phone);-->
    <insert id="registerByPhone">
        INSERT INTO `user`(`name`, `phone`)
        VALUES (#{name}, #{phone})
    </insert>

    <!--    void registerByEmail(@Param("name") String name, @Param("email") String email);-->
    <insert id="registerByEmail">
        INSERT INTO `user`(`name`, `email`)
        VALUES (#{name}, #{email})
    </insert>


    <!--    User login(@Param("phone") String phone);-->
    <select id="getUser" resultMap="UserMap">
        SELECT *
        FROM `user`
        WHERE phone = #{phone};
    </select>


</mapper>